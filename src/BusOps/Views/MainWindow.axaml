<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BusOps.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="BusOps.Views.MainWindow"
        x:CompileBindings="False"
        Title="BusOps - Azure Service Bus Management"
        Width="1200"
        Height="800">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <!-- DataTemplate for Connection List Items -->
        <DataTemplate x:Key="ConnectionItemTemplate" x:DataType="vm:ConnectionItemViewModel">
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Connection Name -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="{Binding Name}"
                               FontWeight="SemiBold"
                               FontSize="14"/>
                    
                    <!-- Connect Button -->
                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                            Content="Connect"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"
                            Command="{Binding ConnectCommand}"/>
                    
                    <!-- Description -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="{Binding Description}"
                               FontSize="12"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               TextWrapping="Wrap"
                               Margin="0,2,0,0"
                               IsVisible="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    
                    <!-- Last Connected -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               FontSize="11"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,2,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Last connected: {0:g}">
                                <Binding Path="LastConnected"/>
                            </MultiBinding>
                        </TextBlock.Text>
                        <TextBlock.IsVisible>
                            <Binding Path="LastConnected" Converter="{x:Static ObjectConverters.IsNotNull}"/>
                        </TextBlock.IsVisible>
                    </TextBlock>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- DataTemplate for Entity Tree Items -->
        <DataTemplate x:Key="EntityTreeItemTemplate" x:DataType="vm:EntityTreeItemViewModel">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding DisplayText}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    
        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New Connection" />
                <MenuItem Header="_Open Configuration" />
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Queues" />
                <MenuItem Header="_Topics" />
                <MenuItem Header="_Subscriptions" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>
    
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200" MaxWidth="600"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
    
            <!-- Left Panel - Navigation -->
            <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="0,0,1,0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Connections" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Grid.Row="1" Content="+ Add Connection"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,10"
                            Command="{Binding AddConnectionCommand}"/>
                    <ListBox Grid.Row="2" Name="ConnectionsList" 
                             Height="200"
                             ItemsSource="{Binding Connections}"
                             ItemTemplate="{StaticResource ConnectionItemTemplate}"
                             Background="Transparent">
                        <!-- Connection items will be populated here -->
                    </ListBox>
    
                    <TextBlock Grid.Row="3" Text="Service Bus Entities" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TreeView Grid.Row="4" Name="EntitiesTree"
                              ItemsSource="{Binding Entities}">
                        <TreeView.ItemTemplate>
                            <TreeDataTemplate ItemsSource="{Binding Children}" x:DataType="vm:EntityTreeItemViewModel">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayText}" />
                                </StackPanel>
                            </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>
            
            <!-- GridSplitter for resizing -->
            <GridSplitter Grid.Column="1" 
                          Width="5"
                          Background="Transparent"
                          ResizeDirection="Columns"
                          HorizontalAlignment="Stretch"/>
    
            <!-- Right Panel - Main Content -->
            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
    
                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Refresh" Margin="0,0,5,0"/>
                    <Button Content="Create Queue" Margin="0,0,5,0"/>
                    <Button Content="Create Topic" Margin="0,0,5,0"/>
                    <Button Content="Send Message" Margin="0,0,5,0"/>
                    
                    <!-- Message Limit Selector -->
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <TextBlock Text="Max Messages:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"/>
                        <ComboBox SelectedItem="{Binding MaxMessagesToShow}"
                                  ItemsSource="{Binding MessageLimitOptions}"
                                  Width="100"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
    
                <!-- Welcome Screen - Shown when no entities are loaded -->
                <Border Grid.Row="1" IsVisible="{Binding !HasEntities}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Welcome to BusOps" FontSize="24" FontWeight="Bold"
                                 HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Azure Service Bus Management Tool" FontSize="16"
                                 HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <Button Content="Create Your First Connection" 
                                HorizontalAlignment="Center"
                                Command="{Binding AddConnectionCommand}"/>
                    </StackPanel>
                </Border>

                <!-- Master-Detail View - Shown when entities are loaded -->
                <Grid Grid.Row="1" IsVisible="{Binding HasEntities}">
                    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Messages" 
                                       FontWeight="SemiBold" 
                                       FontSize="16"
                                       Margin="0,0,0,10"/>

                            <Grid Grid.Row="1">
                                <!-- Loading Indicator -->
                                <TextBlock IsVisible="{Binding IsLoadingMessages}"
                                           Text="Loading messages..."
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                <!-- No Selection Message - show when SelectedEntity is null -->
                                <TextBlock Text="Select a queue or subscription from the tree to view messages"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="20"
                                           IsVisible="{Binding ShowNoSelectionMessage}"/>

                                <!-- Non-Queue/Subscription Entity Message - show when entity is selected but not a queue or subscription -->
                                <TextBlock Text="Select a queue or subscription to view messages (folders and topics don't have messages)"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="20"
                                           IsVisible="{Binding ShowNonMessageableEntityMessage}"/>

                                <!-- Messages Table -->
                                <DataGrid ItemsSource="{Binding Messages}"
                                          SelectedItem="{Binding SelectedMessage}"
                                          IsReadOnly="True"
                                          GridLinesVisibility="All"
                                          BorderThickness="1"
                                          AutoGenerateColumns="False"
                                          CanUserResizeColumns="True"
                                          CanUserSortColumns="True"
                                          BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
                                    <DataGrid.IsVisible>
                                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                                            <Binding Path="!IsLoadingMessages"/>
                                            <Binding Path="HasMessages"/>
                                        </MultiBinding>
                                    </DataGrid.IsVisible>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Sequence #"
                                                            Binding="{Binding SequenceNumber}"
                                                            Width="100"/>
                                        <DataGridTextColumn Header="Message ID"
                                                            Binding="{Binding MessageId}"
                                                            Width="250"/>
                                        <DataGridTextColumn Header="Enqueued Time"
                                                            Binding="{Binding EnqueuedTime, StringFormat='{}{0:g}'}"
                                                            Width="150"/>
                                        <DataGridTextColumn Header="Correlation ID"
                                                            Binding="{Binding CorrelationId}"
                                                            Width="200"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- No Messages Message - only for queues/subscriptions with 0 messages -->
                                <TextBlock Text="No messages found in this queue/subscription"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsVisible="{Binding ShowNoMessagesForEntity}"/>
                            </Grid>

                            <!-- GridSplitter between messages list and details -->
                            <GridSplitter Grid.Row="2"
                                          Height="5"
                                          Background="Transparent"
                                          ResizeDirection="Rows"
                                          HorizontalAlignment="Stretch"
                                          IsVisible="{Binding SelectedMessage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                            <!-- Message Details Section -->
                            <Border Grid.Row="3"
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                    BorderThickness="0,1,0,0"
                                    Padding="0,10,0,0"
                                    IsVisible="{Binding SelectedMessage, Converter={x:Static ObjectConverters.IsNotNull}}">
                                <ScrollViewer>
                                    <Grid RowDefinitions="Auto,Auto">
                                        <!-- Row 0: Message Properties and Custom Properties side-by-side -->
                                        <Grid Grid.Row="0" ColumnDefinitions="*,*" Margin="0,0,0,10">
                                            <!-- Left Column: Message Properties -->
                                            <StackPanel Grid.Column="0" Spacing="5" Margin="0,0,10,0">
                                                <TextBlock Text="Message Properties"
                                                           FontWeight="SemiBold"
                                                           FontSize="14"
                                                           Margin="0,0,0,5"/>

                                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                                                    <!-- Message ID -->
                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Message ID:" FontWeight="SemiBold" Margin="0,2"/>
                                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedMessage.MessageId}" Margin="0,2" TextWrapping="Wrap"/>

                                                    <!-- Sequence Number -->
                                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Sequence Number:" FontWeight="SemiBold" Margin="0,2"/>
                                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedMessage.SequenceNumber}" Margin="0,2"/>

                                                    <!-- Enqueued Time -->
                                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Enqueued Time:" FontWeight="SemiBold" Margin="0,2"/>
                                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedMessage.EnqueuedTime, StringFormat='{}{0:F}'}" Margin="0,2"/>

                                                    <!-- Delivery Count -->
                                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Delivery Count:" FontWeight="SemiBold" Margin="0,2"/>
                                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedMessage.DeliveryCount}" Margin="0,2"/>

                                                    <!-- Label -->
                                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Label:" FontWeight="SemiBold" Margin="0,2"/>
                                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedMessage.Label}" Margin="0,2" TextWrapping="Wrap"/>

                                                    <!-- Correlation ID -->
                                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Correlation ID:" FontWeight="SemiBold" Margin="0,2"/>
                                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedMessage.CorrelationId}" Margin="0,2" TextWrapping="Wrap"/>

                                                    <!-- Session ID -->
                                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Session ID:" FontWeight="SemiBold" Margin="0,2"/>
                                                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SelectedMessage.SessionId}" Margin="0,2" TextWrapping="Wrap"/>

                                                    <!-- To -->
                                                    <TextBlock Grid.Row="7" Grid.Column="0" Text="To:" FontWeight="SemiBold" Margin="0,2"/>
                                                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding SelectedMessage.To}" Margin="0,2" TextWrapping="Wrap"/>

                                                    <!-- Reply To -->
                                                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Reply To:" FontWeight="SemiBold" Margin="0,2"/>
                                                    <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding SelectedMessage.ReplyTo}" Margin="0,2" TextWrapping="Wrap"/>

                                                    <!-- Time To Live -->
                                                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Time To Live:" FontWeight="SemiBold" Margin="0,2"/>
                                                    <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding SelectedMessage.TimeToLive}" Margin="0,2"/>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Right Column: Custom Properties -->
                                            <StackPanel Grid.Column="1" Spacing="5" Margin="10,0,0,0">
                                                <TextBlock Text="Custom Properties"
                                                           FontWeight="SemiBold"
                                                           FontSize="14"
                                                           Margin="0,0,0,5"/>

                                                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Padding="10"
                                                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                                                    <ItemsControl ItemsSource="{Binding SelectedMessage.Properties}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnDefinitions="Auto,*" Margin="0,2">
                                                                    <TextBlock Grid.Column="0" Text="{Binding Key}" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                                                    <TextBlock Grid.Column="1" Text="{Binding Value}" TextWrapping="Wrap"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Border>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Row 1: Message Body -->
                                        <StackPanel Grid.Row="1" Spacing="5">
                                            <TextBlock Text="Message Body"
                                                       FontWeight="SemiBold"
                                                       FontSize="14"
                                                       Margin="0,10,0,5"/>
                                            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="10"
                                                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                                                <TextBox Text="{Binding SelectedMessage.Body}"
                                                         IsReadOnly="True"
                                                         TextWrapping="Wrap"
                                                         AcceptsReturn="True"
                                                         MinHeight="100"
                                                         MaxHeight="300"
                                                         BorderThickness="0"
                                                         Background="Transparent"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,1,0,0" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusText}" Name="StatusText"/>
                <TextBlock Text=" | " Margin="10,0"/>
                <TextBlock Text="{Binding ConnectionStatus}" Name="ConnectionStatus"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>
