<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BusOps.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="BusOps.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="BusOps - Azure Service Bus Management"
        Width="1200"
        Height="800">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <!-- DataTemplate for Connection List Items -->
        <DataTemplate x:Key="ConnectionItemTemplate" x:DataType="vm:ConnectionItemViewModel">
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Connection Name -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="{Binding Name}"
                               FontWeight="SemiBold"
                               FontSize="14"/>
                    
                    <!-- Connect Button -->
                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                            Content="Connect"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"
                            Command="{Binding ConnectCommand}"/>
                    
                    <!-- Description -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="{Binding Description}"
                               FontSize="12"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               TextWrapping="Wrap"
                               Margin="0,2,0,0"
                               IsVisible="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    
                    <!-- Last Connected -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               FontSize="11"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,2,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Last connected: {0:g}">
                                <Binding Path="LastConnected"/>
                            </MultiBinding>
                        </TextBlock.Text>
                        <TextBlock.IsVisible>
                            <Binding Path="LastConnected" Converter="{x:Static ObjectConverters.IsNotNull}"/>
                        </TextBlock.IsVisible>
                    </TextBlock>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- DataTemplate for Entity Tree Items -->
        <DataTemplate x:Key="EntityTreeItemTemplate" x:DataType="vm:EntityTreeItemViewModel">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding DisplayText}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    
        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New Connection" />
                <MenuItem Header="_Open Configuration" />
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Queues" />
                <MenuItem Header="_Topics" />
                <MenuItem Header="_Subscriptions" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>
    
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200" MaxWidth="600"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
    
            <!-- Left Panel - Navigation -->
            <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="0,0,1,0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Connections" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Grid.Row="1" Content="+ Add Connection"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,10"
                            Command="{Binding AddConnectionCommand}"/>
                    <ListBox Grid.Row="2" Name="ConnectionsList" 
                             Height="200"
                             ItemsSource="{Binding Connections}"
                             ItemTemplate="{StaticResource ConnectionItemTemplate}"
                             Background="Transparent">
                        <!-- Connection items will be populated here -->
                    </ListBox>
    
                    <TextBlock Grid.Row="3" Text="Service Bus Entities" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TreeView Grid.Row="4" Name="EntitiesTree"
                              ItemsSource="{Binding Entities}">
                        <TreeView.ItemTemplate>
                            <TreeDataTemplate ItemsSource="{Binding Children}" x:DataType="vm:EntityTreeItemViewModel">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayText}" />
                                </StackPanel>
                            </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>
            
            <!-- GridSplitter for resizing -->
            <GridSplitter Grid.Column="1" 
                          Width="5"
                          Background="Transparent"
                          ResizeDirection="Columns"
                          HorizontalAlignment="Stretch"/>
    
            <!-- Right Panel - Main Content -->
            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
    
                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Refresh" Margin="0,0,5,0"/>
                    <Button Content="Create Queue" Margin="0,0,5,0"/>
                    <Button Content="Create Topic" Margin="0,0,5,0"/>
                    <Button Content="Send Message" Margin="0,0,5,0"/>
                </StackPanel>
    
                <!-- Welcome Screen - Shown when no entities are loaded -->
                <Border Grid.Row="1" IsVisible="{Binding !HasEntities}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Welcome to BusOps" FontSize="24" FontWeight="Bold"
                                 HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Azure Service Bus Management Tool" FontSize="16"
                                 HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <Button Content="Create Your First Connection" 
                                HorizontalAlignment="Center"
                                Command="{Binding AddConnectionCommand}"/>
                    </StackPanel>
                </Border>

                <!-- Master-Detail View - Shown when entities are loaded -->
                <Grid Grid.Row="1" IsVisible="{Binding HasEntities}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Master: Entity List -->
                    <Border Grid.Row="0" 
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Entity Details" 
                                       FontWeight="SemiBold" 
                                       FontSize="16"
                                       Margin="0,0,0,10"/>

                            <ScrollViewer Grid.Row="1">
                                <StackPanel>
                                    <!-- Entity Information -->
                                    <Grid IsVisible="{Binding SelectedEntity, Converter={x:Static ObjectConverters.IsNotNull}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                                   Text="Name:" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   Text="{Binding SelectedEntity.Name}"
                                                   Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                                   Text="Type:" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   Text="{Binding SelectedEntity.Type}"
                                                   Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                                   Text="Message Count:" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                                   Text="{Binding SelectedEntity.MessageCount}"
                                                   Margin="0,0,0,5"/>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                                    Orientation="Horizontal" 
                                                    Margin="0,20,0,0">
                                            <Button Content="Peek Messages" Margin="0,0,5,0"/>
                                            <Button Content="Send Message" Margin="0,0,5,0"/>
                                            <Button Content="Delete" Margin="0,0,5,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- No Selection Message -->
                                    <TextBlock IsVisible="{Binding SelectedEntity, Converter={x:Static ObjectConverters.IsNull}}"
                                               Text="Select an entity from the tree to view details"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- GridSplitter for resizing master/detail -->
                    <GridSplitter Grid.Row="1" 
                                  Height="5"
                                  Background="Transparent"
                                  ResizeDirection="Rows"
                                  HorizontalAlignment="Stretch"/>

                    <!-- Detail: Messages View -->
                    <Border Grid.Row="2"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Messages" 
                                       FontWeight="SemiBold" 
                                       FontSize="16"
                                       Margin="0,0,0,10"/>

                            <DataGrid Grid.Row="1"
                                      IsReadOnly="True"
                                      GridLinesVisibility="All"
                                      BorderThickness="1"
                                      BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Sequence #" Width="Auto"/>
                                    <DataGridTextColumn Header="Message ID" Width="*"/>
                                    <DataGridTextColumn Header="Size" Width="80"/>
                                    <DataGridTextColumn Header="Enqueued Time" Width="150"/>
                                    <DataGridTextColumn Header="State" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,1,0,0" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusText}" Name="StatusText"/>
                <TextBlock Text=" | " Margin="10,0"/>
                <TextBlock Text="{Binding ConnectionStatus}" Name="ConnectionStatus"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>