<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BusOps.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:BusOps.Views"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="1000"
        x:Class="BusOps.Views.MainWindow"
        x:CompileBindings="False"
        Title="BusOps - Azure Service Bus Management"
        Width="1400"
        Height="1000">

    <Window.Background>
        <DynamicResource ResourceKey="PrimaryBackgroundBrush"/>
    </Window.Background>
    
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <!-- DataTemplate for Connection List Items -->
        <DataTemplate x:Key="ConnectionItemTemplate" x:DataType="vm:ConnectionItemViewModel">
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource PanelCornerRadius}"
                    Padding="10"
                    Margin="0,0,0,5">
                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                    <!-- Connection Name -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="{Binding Name}"
                               FontWeight="SemiBold"
                               FontSize="14"/>
                    
                    <!-- Connect Button -->
                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                            Content="Connect"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"
                            Command="{Binding ConnectCommand}"/>
                    
                    <!-- Description -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="{Binding Description}"
                               FontSize="12"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               TextWrapping="Wrap"
                               Margin="0,2,0,0"
                               IsVisible="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    
                    <!-- Last Connected -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               FontSize="11"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,2,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Last connected: {0:g}">
                                <Binding Path="LastConnected"/>
                            </MultiBinding>
                        </TextBlock.Text>
                        <TextBlock.IsVisible>
                            <Binding Path="LastConnected" Converter="{x:Static ObjectConverters.IsNotNull}"/>
                        </TextBlock.IsVisible>
                    </TextBlock>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New Connection" />
                <MenuItem Header="_Open Configuration" />
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Queues" />
                <MenuItem Header="_Topics" />
                <MenuItem Header="_Subscriptions" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>
    
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="200" MaxWidth="600"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
    
            <!-- Left Panel - Navigation -->
            <Border Grid.Column="0" Background="{DynamicResource ResourceKey=PrimaryBackgroundMenu}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="0,0,0,0"
                    Margin="0">
                <Grid Margin="10" RowDefinitions="Auto,Auto,Auto,*">
                    <TextBlock Grid.Row="0" Text="Connections" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Grid.Row="1" Content="+ Add Connection"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,10"
                            Command="{Binding AddConnectionCommand}"/>
                    <ListBox Grid.Row="2" Name="ConnectionsList"
                             MaxHeight="200"
                             ItemsSource="{Binding Connections}"
                             ItemTemplate="{StaticResource ConnectionItemTemplate}"
                             Background="Transparent">
                    </ListBox>
    
                    <!-- Entities tree view -->
                    <views:EntitiesTreeView Grid.Row="3" 
                           IsVisible="{Binding IsConnected}" 
                           Content="{Binding EntitiesTreeViewModel}"/>
                </Grid>
            </Border>
            
